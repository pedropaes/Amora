@model ReceitaViewModel

<link href="Bootstrap/css/star-rating.css" rel="stylesheet" />
<table class="table table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayFor(modelItem => Model.descricao)
            </th>
            <th>

            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td class="table-info">
                <img src="~/images/@Html.DisplayFor(modelItem => Model.imagem)" alt="@Html.DisplayFor(modelItem => Model.descricao)">
            </td>
            <td class="table-info">
                <p align="left"><b>Regime:</b> @Html.DisplayFor(modelItem => Model.regime)</p>
                <p align="left"><b>Tipo:</b> @Html.DisplayFor(modelItem => Model.tipo)</p>
                <p align="left"><b>Tempo de confeção:</b> @Html.DisplayFor(modelItem => Model.tempo)</p>
                <p align="left"><b>Dose:</b> @Html.DisplayFor(modelItem => Model.dose) pessoas</p>
                <p align="left"><b>Dificuldade:</b> @Html.DisplayFor(modelItem => Model.dificuldade)</p>
                @{
                    var result = (Model.classificacao / 5) * 100;

                }
                
                <p align="left"><b>Classificação:</b> <div class="star-ratings-sprite"><span style="width:@result%" class="star-ratings-sprite-rating"></span></div>
                
                

            </td>
            <td class="table-info"></td>

        </tr>

    </tbody>
</table>

<table class="table table-borderless">
    <thead>
        <tr>
            <th>
                <b>Preparação</b>
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Passos.Values)
        {
            <tr>
                <td class="table-info">
                    <p align="left"><b>@Html.DisplayFor(modelItem => item.numero). </b>@Html.DisplayFor(modelItem => item.tecnica)</p>
                </td>
            </tr>
        }



    </tbody>
</table>

